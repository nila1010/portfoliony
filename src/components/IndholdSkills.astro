---
const { logo, alt, alt2, title, tekst, logo2 } = Astro.props
---

<article>
	<div>
		<img src={logo} alt={alt} />
		{logo2 && <img src={logo2} alt={alt2} />}
	</div>
	<h3>{title}</h3>
	<p>
		{tekst}
	</p>
</article>

<style>
	article {
		width: 360px;
		height: 340px;
		padding: 20px;
		display: flex;
		flex-direction: column;
		gap: 10px;
		border: 1px solid #fff;
	}

	img {
		width: 50px;
		height: 50px;
	}

	div {
		display: flex;
		gap: 1cqi;
	}

	@media (max-width: 850px) {
		article {
			width: 300px;
			height: 300px;
		}
		p {
			font-size: 16px;
			line-height: 25px;
		}
	}

	@media (max-width: 500px) {
		article {
			flex-direction: row;
			flex-wrap: wrap;
			height: fit-content;
		}

		h3 {
			align-self: center;
		}
	}
</style>
