	</article>
</section>

<style>
	section {
		margin-top: 100px;
	}

	.tabcontainer {
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		margin-top: 30px;
	}
	.tabs {
		border: 1px solid #fff;
		flex-grow: 1;
		text-align: center;
		font-weight: normal;
		font-size: 25px;
		padding: 5px 25px;
		cursor: pointer;
	}

	article {
		border: 1px solid #fff;
		height: 550px;
		position: relative;
		overflow: hidden;
	}
	.tabindhold {
		position: absolute;
		display: grid;
		grid-template-columns: 2fr 3fr;
		gap: 20px;
		padding: 40px;
		width: 100%;
		height: 100%;
		place-items: center;
		transform: translateY(100%);
		transition: all 0.5s ease-out;
	}

	.indhold {
		display: flex;
		gap: 20px;
		flex-direction: column;
		justify-content: flex-end;
		height: 100%;
	}

	.knapper {
		display: flex;
		max-width: fit-content;
		flex-direction: column;
		gap: 20px;
	}

	.selected {
		transform: translateY(0);
	}

	.active {
		background-color: var(--link);
	}

	@media (max-width: 850px) {
		.tabindhold {
			grid-template-columns: 1fr;
			place-items: start;
		}
		.indhold {
			justify-content: flex-start;
		}
		article {
			height: 650px;
		}

		.knapper {
			order: 2;
			flex-direction: row;
			max-width: 100%;
		}
	}

	@media (max-width: 600px) {
		article {
			height: 550px;
		}
	}
</style>

<script>
	const tabs = document.querySelectorAll('.tabs')
	const tabIndhold = document.querySelectorAll('.tabindhold')
	const container = document.querySelector('article')

	tabs.forEach((button) => {
		button.addEventListener('click', () => {
			tabs.forEach((btn) => btn.classList.remove('active'))
			const select_tab = button.getAttribute('data-tab')
			button.classList.add('active')

			tabIndhold.forEach((indhold) => {
				indhold.classList.toggle('selected', indhold.classList.contains(select_tab))
			})
		})
	})
</script>
